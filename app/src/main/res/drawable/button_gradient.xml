<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="28dip" />
            <stroke android:width="6dip" android:color="#eb9d9d" />
            <gradient android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimaryDark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dip" />
            <gradient android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimaryDark" />
        </shape>
    </item>
</selector>